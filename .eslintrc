{
  "env": {
    "browser": true,
    "jest/globals": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}
